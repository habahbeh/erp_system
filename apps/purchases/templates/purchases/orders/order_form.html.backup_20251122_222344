{% block extra_js %}
<!-- Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/i18n/ar.js"></script>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
$(document).ready(function() {
    // ============================================
    // Initialize Select2
    // ============================================
    function initSelect2() {
        // Initialize Select2 for form selects
        $('#id_supplier, #id_warehouse, #id_requested_by').select2({
            theme: 'bootstrap-5',
            width: '100%',
            dir: "rtl",
            placeholder: 'اختر...',
            allowClear: true,
            language: {
                noResults: function() { return "لا توجد نتائج"; },
                searching: function() { return "جاري البحث..."; }
            }
        });

        // Initialize Select2 for item selects in table
        $('.item-select').select2({
            theme: 'bootstrap-5',
            width: '100%',
            dir: "rtl",
            placeholder: 'اختر الصنف...',
            allowClear: true,
            language: {
                noResults: function() { return "لا توجد نتائج"; },
                searching: function() { return "جاري البحث..."; }
            }
        });
    }

    initSelect2();

    // ============================================
    // Calculate Item Total
    // ============================================
    function calculateItemTotal(row) {
        var quantity = parseFloat(row.find('.quantity-input').val()) || 0;
        var unitPrice = parseFloat(row.find('.price-input').val()) || 0;
        var total = quantity * unitPrice;

        row.find('.item-total').text(total.toFixed(3));
        return total;
    }

    // ============================================
    // Calculate Summary
    // ============================================
    function calculateSummary() {
        var totalQuantity = 0;
        var itemCount = 0;
        var grandTotal = 0;

        $('#items-tbody tr:visible').each(function() {
            var deleteChecked = $(this).find('input[name$="-DELETE"]').is(':checked');
            if (!deleteChecked) {
                var quantity = parseFloat($(this).find('.quantity-input').val()) || 0;
                var total = calculateItemTotal($(this));

                totalQuantity += quantity;
                grandTotal += total;
                itemCount++;
            }
        });

        $('#summary-count').text(itemCount);
        $('#summary-quantity').text(totalQuantity.toFixed(3));
        $('#summary-total').text(grandTotal.toFixed(3));
    }

    // ============================================
    // Update Row Numbers
    // ============================================
    function updateRowNumbers() {
        var rowNum = 1;
        $('#items-tbody tr:visible').each(function() {
            var deleteChecked = $(this).find('input[name$="-DELETE"]').is(':checked');
            if (!deleteChecked) {
                $(this).find('.row-number').text(rowNum++);
            }
        });
    }

    // ============================================
    // Event Handlers - Real-time Calculation
    // ============================================
    $(document).on('input change', '.quantity-input, .price-input', function() {
        calculateItemTotal($(this).closest('tr'));
        calculateSummary();
    });

    // ============================================
    // Add New Row
    // ============================================
    var formIdx = {{ formset.total_form_count }};

    $('#btn-add-line').off('click').on('click', function(e) {
        e.preventDefault();
        e.stopPropagation();

        // Get template HTML and replace __prefix__
        var templateHtml = $('#empty-row-template').html();
        var rowHtml = templateHtml.replace(/__prefix__/g, formIdx);
        var newRow = $(rowHtml);

        // Append to tbody
        $('#items-tbody').append(newRow);

        // Update TOTAL_FORMS
        $('#id_lines-TOTAL_FORMS').val(formIdx + 1);
        formIdx++;

        // Initialize Select2 ONLY for the new row
        newRow.find('.item-select').select2({
            theme: 'bootstrap-5',
            width: '100%',
            dir: "rtl",
            placeholder: 'اختر الصنف...',
            allowClear: true,
            language: {
                noResults: function() { return "لا توجد نتائج"; },
                searching: function() { return "جاري البحث..."; }
            }
        });

        updateRowNumbers();
        calculateSummary();
    });

    // ============================================
    // Delete Row
    // ============================================
    $(document).on('click', '.btn-delete-row', function() {
        var row = $(this).closest('tr');
        var deleteInput = row.find('input[name$="-DELETE"]');

        if (deleteInput.length && row.find('input[name$="-id"]').val()) {
            // Mark for deletion if it's an existing record
            deleteInput.prop('checked', true);
            row.hide();
        } else {
            // Remove completely if it's a new row
            row.remove();
        }

        updateRowNumbers();
        calculateSummary();
    });

    // ============================================
    // Keyboard Shortcuts
    // ============================================
    $(document).on('keydown', function(e) {
        // F2 - Add Line
        if (e.key === 'F2') {
            e.preventDefault();
            $('#btn-add-line').click();
            return false;
        }

        // F9 or Ctrl+S - Save
        if (e.key === 'F9' || (e.ctrlKey && e.key === 's')) {
            e.preventDefault();
            $('#orderForm').submit();
            return false;
        }

        // Esc - Cancel
        if (e.key === 'Escape') {
            if (confirm('هل تريد إلغاء التغييرات والعودة؟')) {
                window.location.href = '{% url "purchases:order_list" %}';
            }
            return false;
        }
    });

    // Tab Navigation in Grid
    $(document).on('keydown', '.order-table input, .order-table select, .order-table textarea', function(e) {
        // Enter key - Move to next row same column
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            var currentCell = $(this).closest('td');
            var currentRow = currentCell.closest('tr');
            var cellIndex = currentCell.index();
            var nextRow = currentRow.next('tr');

            if (nextRow.length) {
                var nextCell = nextRow.find('td').eq(cellIndex);
                var nextInput = nextCell.find('input, select, textarea').first();
                if (nextInput.length) {
                    nextInput.focus();
                }
            } else {
                // Add new row and focus on same column
                $('#btn-add-line').click();
                setTimeout(function() {
                    var newRow = $('#items-tbody tr:last');
                    var newCell = newRow.find('td').eq(cellIndex);
                    var newInput = newCell.find('input, select, textarea').first();
                    if (newInput.length) {
                        newInput.focus();
                    }
                }, 100);
            }
        }
    });

    // ============================================
    // Form Validation
    // ============================================
    $('#orderForm').on('submit', function(e) {
        var errors = [];

        // إزالة جميع الأخطاء السابقة
        $('.is-invalid').removeClass('is-invalid');
        $('.invalid-feedback').remove();

        // 1. التحقق من التاريخ
        var dateInput = $('input[name="date"]');
        var date = dateInput.val();
        if (!date) {
            errors.push('يجب تحديد تاريخ الأمر');
            dateInput.addClass('is-invalid');
        }

        // 2. التحقق من التاريخ المتوقع للتسليم
        var expectedDateInput = $('input[name="expected_delivery_date"]');
        var expectedDate = expectedDateInput.val();
        if (date && expectedDate && expectedDate < date) {
            errors.push('التاريخ المتوقع للتسليم يجب أن يكون بعد أو يساوي تاريخ الأمر');
            expectedDateInput.addClass('is-invalid');
        }

        // 3. التحقق من المورد
        var supplierSelect = $('select[name="supplier"]');
        var supplier = supplierSelect.val();
        if (!supplier) {
            errors.push('يجب تحديد المورد');
            supplierSelect.addClass('is-invalid');
        }

        // 4. التحقق من المستودع
        var warehouseSelect = $('select[name="warehouse"]');
        var warehouse = warehouseSelect.val();
        if (!warehouse) {
            errors.push('يجب تحديد المستودع');
            warehouseSelect.addClass('is-invalid');
        }

        // 5. التحقق من العملة
        var currencySelect = $('select[name="currency"]');
        var currency = currencySelect.val();
        if (!currency) {
            errors.push('يجب تحديد العملة');
            currencySelect.addClass('is-invalid');
        }

        // 6. التحقق من الموظف الطالب
        var requestedBySelect = $('select[name="requested_by"]');
        var requestedBy = requestedBySelect.val();
        if (!requestedBy) {
            errors.push('يجب تحديد الموظف الطالب');
            requestedBySelect.addClass('is-invalid');
        }

        // 7. التحقق من وجود بنود
        var validRows = 0;
        var itemErrors = [];

        $('#items-tbody tr:visible').each(function(index) {
            var row = $(this);
            var isDeleted = row.find('input[name$="-DELETE"]').is(':checked');

            if (!isDeleted) {
                var rowNum = index + 1;
                var itemSelect = row.find('select[name$="-item"]');
                var descriptionInput = row.find('textarea[name$="-description"]');
                var quantityInput = row.find('input[name$="-quantity"]');
                var priceInput = row.find('input[name$="-unit_price"]');

                var item = itemSelect.val();
                var description = descriptionInput.val() ? descriptionInput.val().trim() : '';
                var quantity = quantityInput.val();
                var price = priceInput.val();

                // التحقق إذا كان السطر فارغ تماماً
                var isEmpty = !item && !description && !quantity && !price;

                // إذا كان السطر فارغ تماماً، نتجاهله
                if (isEmpty) {
                    return true; // continue to next iteration
                }

                // إذا بدأ المستخدم بإدخال بيانات، نتحقق من المطلوب
                var hasErrors = false;

                // التحقق من الصنف (مطلوب)
                if (!item) {
                    itemErrors.push('السطر ' + rowNum + ': يجب اختيار الصنف');
                    itemSelect.addClass('is-invalid');
                    hasErrors = true;
                }

                // التحقق من الكمية (مطلوب وأكبر من صفر)
                if (!quantity || parseFloat(quantity) <= 0) {
                    itemErrors.push('السطر ' + rowNum + ': يجب إدخال كمية صحيحة أكبر من صفر');
                    quantityInput.addClass('is-invalid');
                    hasErrors = true;
                }

                // التحقق من السعر (مطلوب وأكبر من أو يساوي صفر)
                if (!price || parseFloat(price) < 0) {
                    itemErrors.push('السطر ' + rowNum + ': يجب إدخال سعر صحيح');
                    priceInput.addClass('is-invalid');
                    hasErrors = true;
                }

                // إذا كانت جميع الحقول المطلوبة صحيحة، فهذا سطر صالح
                if (!hasErrors && item && quantity && parseFloat(quantity) > 0 && price && parseFloat(price) >= 0) {
                    validRows++;
                }
            }
        });

        if (validRows === 0) {
            errors.push('يجب إضافة بند واحد على الأقل مع صنف وكمية وسعر صحيحة');
        }

        // دمج جميع الأخطاء
        if (itemErrors.length > 0) {
            errors = errors.concat(itemErrors);
        }

        // عرض الأخطاء إن وجدت
        if (errors.length > 0) {
            e.preventDefault();

            var errorHtml = '<div class="text-start" dir="rtl"><ul class="mb-0">';
            errors.forEach(function(error) {
                errorHtml += '<li>' + error + '</li>';
            });
            errorHtml += '</ul></div>';

            Swal.fire({
                icon: 'error',
                title: 'يوجد أخطاء في النموذج',
                html: errorHtml,
                confirmButtonText: 'حسناً',
                customClass: {
                    popup: 'text-end'
                }
            }).then(function() {
                // التمرير إلى أول حقل خاطئ
                var firstInvalid = $('.is-invalid').first();
                if (firstInvalid.length) {
                    $('html, body').animate({
                        scrollTop: firstInvalid.offset().top - 100
                    }, 500);
                    firstInvalid.focus();
                }
            });

            // تمكين زر الإرسال مرة أخرى
            $('button[type="submit"]').prop('disabled', false).html(
                '<i class="fas fa-save me-1"></i>حفظ الأمر'
            );

            return false;
        }

        // إذا كان كل شيء صحيح، تعطيل الزر
        $('button[type="submit"]').prop('disabled', true).html(
            '<i class="fas fa-spinner fa-spin me-1"></i>جاري الحفظ...'
        );
    });

    // ============================================
    // إزالة علامة الخطأ عند التصحيح
    // ============================================
    $(document).on('input change', '.is-invalid', function() {
        $(this).removeClass('is-invalid');
        $(this).next('.invalid-feedback').remove();
    });

    // ============================================
    // Real-time validation للحقول المطلوبة
    // ============================================

    // دالة للتحقق إذا كان السطر فارغ تماماً
    function isRowEmpty(row) {
        var item = row.find('select[name$="-item"]').val();
        var description = row.find('textarea[name$="-description"]').val() ?
                         row.find('textarea[name$="-description"]').val().trim() : '';
        var quantity = row.find('input[name$="-quantity"]').val();
        var price = row.find('input[name$="-unit_price"]').val();

        return !item && !description && !quantity && !price;
    }

    // التحقق من الصنف في الوقت الفعلي
    $(document).on('blur change', 'select[name$="-item"]', function() {
        var $this = $(this);
        var row = $this.closest('tr');
        var isDeleted = row.find('input[name$="-DELETE"]').is(':checked');

        // إذا كان السطر محذوف أو فارغ تماماً، لا نضع علامة خطأ
        if (isDeleted || isRowEmpty(row)) {
            $this.removeClass('is-invalid');
            return;
        }

        // إذا بدأ المستخدم بإدخال بيانات، نتحقق من الصنف
        var value = $this.val();
        if (!value) {
            $this.addClass('is-invalid');
        } else {
            $this.removeClass('is-invalid');
        }
    });

    // التحقق من الكمية في الوقت الفعلي
    $(document).on('blur', 'input[name$="-quantity"]', function() {
        var $this = $(this);
        var row = $this.closest('tr');
        var isDeleted = row.find('input[name$="-DELETE"]').is(':checked');

        // إذا كان السطر محذوف أو فارغ تماماً، لا نضع علامة خطأ
        if (isDeleted || isRowEmpty(row)) {
            $this.removeClass('is-invalid');
            return;
        }

        // إذا بدأ المستخدم بإدخال بيانات، نتحقق من الكمية
        var value = parseFloat($this.val());
        if (isNaN(value) || value <= 0) {
            $this.addClass('is-invalid');
        } else {
            $this.removeClass('is-invalid');
        }
    });

    // التحقق من السعر في الوقت الفعلي
    $(document).on('blur', 'input[name$="-unit_price"]', function() {
        var $this = $(this);
        var row = $this.closest('tr');
        var isDeleted = row.find('input[name$="-DELETE"]').is(':checked');

        // إذا كان السطر محذوف أو فارغ تماماً، لا نضع علامة خطأ
        if (isDeleted || isRowEmpty(row)) {
            $this.removeClass('is-invalid');
            return;
        }

        // إذا بدأ المستخدم بإدخال بيانات، نتحقق من السعر
        var value = parseFloat($this.val());
        if (isNaN(value) || value < 0) {
            $this.addClass('is-invalid');
        } else {
            $this.removeClass('is-invalid');
        }
    });

    // ============================================
    // Form Change Tracking
    // ============================================
    var formChanged = false;

    $('form input, form select, form textarea').on('change', function() {
        formChanged = true;
    });

    $(window).on('beforeunload', function() {
        if (formChanged) {
            return 'لديك تغييرات غير محفوظة. هل تريد المغادرة؟';
        }
    });

    $('form').on('submit', function() {
        formChanged = false;
    });

    // Initial calculation
    calculateSummary();
});
</script>
{% endblock %}
